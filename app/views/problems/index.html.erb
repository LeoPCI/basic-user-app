<%= link_to 'Activator', activator_path %>

<h1>Problems</h1>

<%= link_to 'New Problem', post_problem_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @problems.each do |problem| %>


        <tr>

          <td><%= problem.title %></td>
          <td><%= problem.description %></td>
          <td><%= link_to "Show", issue_path(problem), { :class=>"link-left" } %></td>

        </tr>

    <% end %>
  </tbody>
</table>

<br>