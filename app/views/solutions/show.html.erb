<!-- CRITERIA -->

<h1>Criteria</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Alternatives</th>
      <th>Problem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @criteria.each do |criterium| %>
      <tr>
        <td><%= criterium.title %></td>
        <td><%= criterium.alternatives %></td>
        <td>y <%= criterium.poll.where(answer: 1).count %></td>

        <td>n <%= criterium.poll.where(answer: 0).count %></td>

        <% if criterium.user.include?(@user) %>
          <td>Is this satisfied?</td>
          <td><%= link_to "yes", set_poll_path(:criterium_id => criterium.id, :solution_id => @solution.id, :answer => 1), :method => "post" %></td>
          
          <td><%= link_to "no", set_poll_path(:criterium_id => criterium.id, :solution_id => @solution.id, :answer => 0), :method => "post" %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<!-- CRITERIA ENDS -->


